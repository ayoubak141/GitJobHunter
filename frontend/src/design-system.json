{
  "designSystem": {
    "name": "GitJobHunter Design System",
    "version": "1.0.0",
    "colors": {
      "primary": {
        "background": "#f9fafb",
        "surface": "#ffffff",
        "surfaceVariant": "#f3f4f6"
      },
      "accent": {
        "primary": "#2563eb",
        "secondary": "#1d4ed8",
        "success": "#059669",
        "warning": "#d97706",
        "danger": "#dc2626"
      },
      "text": {
        "primary": "#111827",
        "secondary": "#6b7280",
        "muted": "#9ca3af",
        "inverse": "#ffffff"
      },
      "status": {
        "success": "#059669",
        "warning": "#d97706",
        "error": "#dc2626",
        "info": "#2563eb",
        "processing": "#7c3aed"
      },
      "job": {
        "new": "#059669",
        "viewed": "#6b7280",
        "applied": "#2563eb",
        "saved": "#d97706"
      },
      "feed": {
        "active": "#059669",
        "inactive": "#6b7280",
        "error": "#dc2626",
        "processing": "#7c3aed"
      },
      "neutral": {
        "50": "#f9fafb",
        "100": "#f3f4f6",
        "200": "#e5e7eb",
        "300": "#d1d5db",
        "400": "#9ca3af",
        "500": "#6b7280",
        "600": "#4b5563",
        "700": "#374151",
        "800": "#1f2937",
        "900": "#111827"
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "Inter, system-ui, Avenir, Helvetica, Arial, sans-serif",
        "mono": "ui-monospace, SFMono-Regular, 'Courier New', monospace"
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem",
        "6xl": "3.75rem"
      },
      "fontWeight": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "lineHeight": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75
      }
    },
    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem"
    },
    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "2xl": "1rem",
      "3xl": "1.5rem",
      "full": "9999px"
    },
    "shadows": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)",
      "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)"
    },
    "components": {
      "card": {
        "base": {
          "backgroundColor": "var(--surface)",
          "borderRadius": "var(--border-radius-xl)",
          "padding": "var(--spacing-lg)",
          "boxShadow": "var(--shadow-md)"
        },
        "variants": {
          "stats": {
            "backgroundColor": "#ffffff",
            "color": "#111827",
            "border": "1px solid #e5e7eb"
          },
          "job": {
            "backgroundColor": "#ffffff",
            "color": "#111827",
            "border": "1px solid #e5e7eb",
            "hover": {
              "borderColor": "#2563eb"
            }
          },
          "feed": {
            "backgroundColor": "#ffffff",
            "color": "#111827",
            "border": "1px solid #e5e7eb"
          },
          "alert": {
            "backgroundColor": "#fef3c7",
            "color": "#92400e",
            "border": "1px solid #fcd34d"
          },
          "error": {
            "backgroundColor": "#fef2f2",
            "color": "#991b1b",
            "border": "1px solid #fecaca"
          }
        }
      },
      "button": {
        "base": {
          "borderRadius": "var(--border-radius-xl)",
          "fontWeight": "var(--font-weight-medium)",
          "fontSize": "var(--font-size-sm)",
          "padding": "var(--spacing-sm) var(--spacing-lg)",
          "transition": "all 0.2s ease-in-out",
          "border": "none",
          "cursor": "pointer"
        },
        "variants": {
          "primary": {
            "backgroundColor": "#2563eb",
            "color": "#ffffff",
            "hover": {
              "backgroundColor": "#1d4ed8"
            }
          },
          "secondary": {
            "backgroundColor": "#ffffff",
            "color": "#374151",
            "border": "1px solid #d1d5db",
            "hover": {
              "backgroundColor": "#f9fafb"
            }
          },
          "success": {
            "backgroundColor": "#059669",
            "color": "#ffffff",
            "hover": {
              "backgroundColor": "#047857"
            }
          },
          "danger": {
            "backgroundColor": "#dc2626",
            "color": "#ffffff",
            "hover": {
              "backgroundColor": "#b91c1c"
            }
          },
          "processing": {
            "backgroundColor": "#7c3aed",
            "color": "#ffffff",
            "hover": {
              "backgroundColor": "#6d28d9"
            }
          }
        },
        "sizes": {
          "small": {
            "padding": "var(--spacing-xs) var(--spacing-md)",
            "fontSize": "var(--font-size-xs)"
          },
          "medium": {
            "padding": "var(--spacing-sm) var(--spacing-lg)",
            "fontSize": "var(--font-size-sm)"
          },
          "large": {
            "padding": "var(--spacing-md) var(--spacing-xl)",
            "fontSize": "var(--font-size-base)"
          }
        }
      },
      "jobCard": {
        "base": {
          "backgroundColor": "#ffffff",
          "border": "1px solid #e5e7eb",
          "borderRadius": "var(--border-radius-lg)",
          "padding": "var(--spacing-lg)",
          "transition": "border-color 0.2s ease-in-out"
        },
        "states": {
          "new": {
            "borderLeftColor": "#059669",
            "borderLeftWidth": "4px"
          },
          "viewed": {
            "backgroundColor": "#f9fafb"
          },
          "hover": {
            "borderColor": "#2563eb"
          }
        }
      },
      "feedCard": {
        "base": {
          "backgroundColor": "#ffffff",
          "border": "1px solid #e5e7eb",
          "borderRadius": "var(--border-radius-lg)",
          "padding": "var(--spacing-lg)"
        },
        "states": {
          "active": {
            "borderColor": "#059669"
          },
          "disabled": {
            "backgroundColor": "#f9fafb",
            "opacity": "0.6"
          },
          "error": {
            "borderColor": "#dc2626",
            "backgroundColor": "#fef2f2"
          }
        }
      },
      "statsCard": {
        "base": {
          "backgroundColor": "#ffffff",
          "border": "1px solid #e5e7eb",
          "borderRadius": "var(--border-radius-lg)",
          "padding": "var(--spacing-xl)",
          "boxShadow": "var(--shadow-sm)"
        }
      },
      "alert": {
        "base": {
          "borderRadius": "var(--border-radius-lg)",
          "padding": "var(--spacing-lg)",
          "border": "1px solid"
        },
        "variants": {
          "success": {
            "backgroundColor": "#f0fdf4",
            "borderColor": "#bbf7d0",
            "color": "#15803d"
          },
          "error": {
            "backgroundColor": "#fef2f2",
            "borderColor": "#fecaca",
            "color": "#dc2626"
          },
          "warning": {
            "backgroundColor": "#fffbeb",
            "borderColor": "#fed7aa",
            "color": "#d97706"
          },
          "info": {
            "backgroundColor": "#eff6ff",
            "borderColor": "#bfdbfe",
            "color": "#2563eb"
          }
        }
      },
      "navigation": {
        "header": {
          "backgroundColor": "#ffffff",
          "borderBottom": "1px solid #e5e7eb",
          "padding": "var(--spacing-lg)"
        },
        "tabNavigation": {
          "backgroundColor": "#ffffff",
          "borderBottom": "1px solid #e5e7eb"
        },
        "tab": {
          "base": {
            "padding": "var(--spacing-lg) var(--spacing-xs)",
            "borderBottom": "2px solid transparent",
            "fontSize": "var(--font-size-sm)",
            "fontWeight": "var(--font-weight-medium)",
            "color": "#6b7280",
            "transition": "all 0.2s ease-in-out"
          },
          "active": {
            "borderBottomColor": "#2563eb",
            "color": "#2563eb"
          },
          "hover": {
            "color": "#374151",
            "borderBottomColor": "#d1d5db"
          }
        }
      },
      "layout": {
        "container": {
          "maxWidth": "1200px",
          "margin": "0 auto",
          "padding": "var(--spacing-lg)"
        },
        "grid": {
          "gap": "var(--spacing-lg)",
          "columns": {
            "mobile": 1,
            "tablet": 2,
            "desktop": 3,
            "wide": 4
          }
        }
      }
    },
    "breakpoints": {
      "mobile": "640px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1280px",
      "ultrawide": "1536px"
    },
    "animation": {
      "duration": {
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms"
      },
      "easing": {
        "linear": "linear",
        "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
        "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
        "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "cssVariables": {
      ":root": {
        "--primary-background": "#f9fafb",
        "--surface": "#ffffff",
        "--surface-variant": "#f3f4f6",
        "--text-primary": "#111827",
        "--text-secondary": "#6b7280",
        "--text-muted": "#9ca3af",
        "--accent-primary": "#2563eb",
        "--accent-secondary": "#1d4ed8",
        "--accent-success": "#059669",
        "--accent-warning": "#d97706",
        "--accent-danger": "#dc2626",
        "--job-new": "#059669",
        "--job-viewed": "#6b7280",
        "--job-applied": "#2563eb",
        "--job-saved": "#d97706",
        "--feed-active": "#059669",
        "--feed-inactive": "#6b7280",
        "--feed-error": "#dc2626",
        "--feed-processing": "#7c3aed",
        "--spacing-xs": "0.25rem",
        "--spacing-sm": "0.5rem",
        "--spacing-md": "1rem",
        "--spacing-lg": "1.5rem",
        "--spacing-xl": "2rem",
        "--spacing-2xl": "3rem",
        "--border-radius-sm": "0.125rem",
        "--border-radius-md": "0.375rem",
        "--border-radius-lg": "0.5rem",
        "--border-radius-xl": "0.75rem",
        "--border-radius-2xl": "1rem",
        "--shadow-sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "--shadow-md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "--shadow-lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
        "--font-size-xs": "0.75rem",
        "--font-size-sm": "0.875rem",
        "--font-size-base": "1rem",
        "--font-size-lg": "1.125rem",
        "--font-size-xl": "1.25rem",
        "--font-size-2xl": "1.5rem",
        "--font-size-3xl": "1.875rem",
        "--font-weight-normal": "400",
        "--font-weight-medium": "500",
        "--font-weight-semibold": "600",
        "--font-weight-bold": "700"
      }
    },
    "usage": {
      "description": "GitJobHunter Design System - A professional, clean design system optimized for job aggregation and RSS feed management applications",
      "examples": {
        "jobCardUsage": "Use job status colors (new: green, viewed: gray, applied: blue, saved: orange) for job cards",
        "feedCardUsage": "Use feed states (active: green, inactive: gray, error: red, processing: purple) for RSS feed cards",
        "buttonUsage": "Primary buttons for main actions (Process Jobs), success for positive actions, danger for destructive actions",
        "alertUsage": "Success for job processing completion, error for API failures, warning for configuration issues, info for general notifications",
        "navigationUsage": "Horizontal tabs for main sections (Dashboard, RSS Feeds, Configuration, Status)",
        "spacingUsage": "Use consistent spacing scale for margins, paddings, and gaps throughout job cards and feed displays",
        "typographyUsage": "Primary text for job titles and main content, secondary for metadata and descriptions, muted for timestamps and auxiliary info"
      },
      "components": {
        "dashboard": {
          "statsCards": "Display total jobs, new jobs found, and active feeds with appropriate icons",
          "jobsList": "Use job cards with status indicators and hover effects",
          "processing": "Use processing button variant with loading states"
        },
        "feeds": {
          "feedCards": "Display RSS feeds with status indicators (active/inactive/error)",
          "addFeed": "Form components with validation states"
        },
        "config": {
          "settings": "Configuration forms with success/error feedback",
          "testing": "Test buttons with loading states and result alerts"
        },
        "status": {
          "health": "Status indicators using success/warning/error color palette",
          "logs": "Monospace text for technical information"
        }
      }
    }
  }
}
